<Page x:Class="Milionar.SendScorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Milionar"
      mc:Ignorable="d" 
      d:DesignHeight="676" d:DesignWidth="1200"
      Title="SendScorePage">

    <Grid>
        <Label Content="Vaše jméno:" Width="500" Height="100" Margin="0,0,0,200" VerticalContentAlignment="Bottom" FontSize="30" Foreground="White"></Label>
        <TextBox x:Name="nameInput" Width="500" Height="100"></TextBox>
        <Button Content="Odeslat" Width="250" Height="100" Margin="755,0,0,0" FontSize="30" Click="sendScore_click"></Button>
    </Grid>
</Page>
